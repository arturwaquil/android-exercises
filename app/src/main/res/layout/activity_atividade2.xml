<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Atividade2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/light_label"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="LIGHT:"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/temp_label"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="TEMP:"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/prox_label"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="PROX:"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/lat_label"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="LAT:"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/long_label"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="LONG:"
                    android:textSize="36sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/light_value"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/temp_value"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/prox_value"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/lat_value"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/long_value"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="36sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/gps_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="updateGPS"
            android:text="GPS" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>