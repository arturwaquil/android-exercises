<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".A1E3ShowMessage">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="80dp"
        android:text="Movimento detectado!"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/x_label"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="X:"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/y_label"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Y:"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/z_label"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Z:"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/x_old"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="x"
                android:textAlignment="center"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/y_old"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="y"
                android:textAlignment="center"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/z_old"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="z"
                android:textAlignment="center"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/x_arrow"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="-->"
                android:textAlignment="center"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/y_arrow"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="-->"
                android:textAlignment="center"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/z_arrow"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="-->"
                android:textAlignment="center"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/x_value"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="x"
                android:textAlignment="center"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/y_value"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="y"
                android:textAlignment="center"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/z_value"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="z"
                android:textAlignment="center"
                android:textSize="36sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>