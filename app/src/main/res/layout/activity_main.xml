<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_ex1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="gotoAtividade1Ex1"
            android:text="EXERCÍCIO 1: SOMA" />

        <Button
            android:id="@+id/button_ex2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="gotoAtividade1Ex2"
            android:text="EXERCÍCIO 2: MENSAGEM" />

        <Button
            android:id="@+id/button_ex3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="gotoAtividade1Ex3"
            android:text="EXERCÍCIO 3: ACELERÔMETRO" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>